# we don't need a PNOR layout for Mambo
BR2_PACKAGE_OPENPOWER_PNOR=n

BR2_TARGET_GENERIC_HOSTNAME="skiroot"

# petitboot requirements
BR2_ENABLE_LOCALE_PURGE=y
