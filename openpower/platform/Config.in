config BR2_OPENPOWER_PLATFORM
    bool "Enables only one openPower platform"
    default n
    depends on ((BR2_OPENPOWER_POWER9 || BR2_OPENPOWER_POWER10 || BR2_OPENPOWER_POWER11) && !(BR2_OPENPOWER_POWER9 && BR2_OPENPOWER_POWER10 && BR2_OPENPOWER_POWER11))

config BR2_OPENPOWER_POWER9
    bool "Enables the OpenPower p9 platform"
    default n
    depends on BR2_powerpc64 || BR2_powerpc64le

config BR2_OPENPOWER_POWER10
    bool "Enables the OpenPower p10 platform"
    default n
    depends on BR2_powerpc64 || BR2_powerpc64le

config BR2_OPENPOWER_POWER11
    bool "Enables the OpenPower p11 platform"
    default n
    depends on BR2_powerpc64 || BR2_powerpc64le
