config BR2_PACKAGE_SBE_P11
        bool "sbe-p11"
        default y if (BR2_OPENPOWER_PLATFORM && BR2_OPENPOWER_POWER11)
        select BR2_CPP
        depends on BR2_PACKAGE_HCODE_P11
        help
            Project to build the sbe firmware codebase for P11

if BR2_PACKAGE_SBE_P11

choice
	prompt "SBE version"
	default BR2_SBE_P11_LATEST_VERSION

config BR2_SBE_P11_LATEST_VERSION
	bool "Use latest SBE master"

config BR2_SBE_P11_CUSTOM_VERSION
	bool "Custom SBE version"

endchoice

config BR2_SBE_P11_CUSTOM_VERSION_VALUE
	string "SBE version"
	depends on BR2_SBE_P11_CUSTOM_VERSION

config BR2_SBE_P11_VERSION
	string
	default "a25e8bc6cf3fb4f70d811227fb79cc6145fcfc4b" if BR2_SBE_P11_LATEST_VERSION
	default BR2_SBE_P11_CUSTOM_VERSION_VALUE \
		if BR2_SBE_P11_CUSTOM_VERSION

endif
