menu "Balcones XML (MRW)"

config BR2_PACKAGE_BALCONES_XML
        bool "balcones_xml"

if BR2_PACKAGE_BALCONES_XML

choice
	prompt "Balcones XML location"

config BR2_BALCONES_XML_GITHUB_PROJECT
       bool "OpenPOWER Github project name"

config BR2_BALCONES_XML_CUSTOM_GIT
       bool "Custom URL of Balcones xml repository"

endchoice

config BR2_BALCONES_XML_FILTER_UNWANTED_ATTRIBUTES
       bool "Filter Unwanted Attributes"
       default y

config BR2_BALCONES_XML_OPPOWERVM_ATTRIBUTES
       bool "OPPOWERVM Attributes/Target"
       default y

config BR2_BALCONES_XML_TARGET_TYPES_OPENPOWER_XML
       bool "Include target_types_openpower.xml"
       default y

config BR2_BALCONES_XML_CUSTOM_GIT_VALUE
	string "URL of Balcones xml repository"
	depends on BR2_BALCONES_XML_CUSTOM_GIT

config BR2_BALCONES_XML_GITHUB_PROJECT_VALUE
       string "The Github project name (e.g. balcones-xml)"
       default "balcones-xml"
       depends on BR2_BALCONES_XML_GITHUB_PROJECT

config BR2_BALCONES_XML_VERSION
       string "Version of Balcones XML"

config BR2_BALCONES_XML_FILENAME
       string "Balcones XML filename (e.g. balcones-mrw.xml)"
       default "balcones-mrw.xml"
       help
           The name of the MRW XML file. Note that this file MUST
           come with the '.xml' prefix (all lowercase)

config BR2_BALCONES_XML_SYSTEM_FILENAME
       string "Targeting Balcones system xml filename"
       default ""
       help
           Defines the name of the system XML filename
           to be used when creating targeting binary image

config BR2_BALCONES_XML_TARGETING_FILENAME
       string "Targeting Balcones mrw xml filename"
       default ""
       help
           Defines the name of the mrw XML filename
           to be used when creating targeting binary image

config BR2_BALCONES_XML_BIOS_FILENAME
       string "BIOS Balcones metadata XML filename"
       default "Balcones-MRW_bios.xml"
       help
           Defines the name of the BIOS XML filename
           to parse when generating BIOS metadata

config BR2_BALCONES_XML_TARGETING_BIN_FILENAME
       string "Name of the openpower binary targeting file"
       default "Balcones-MRW.targeting.bin"
       help
           String used to define name of openpower targeting binary file

config BR2_BALCONES_XML_TARGETING_ECC_FILENAME
       string "Name of the openpower binary targeting ecc file"
       default "Balcones-MRW.targeting.bin.ecc"
       help
           String used to define name of openpower
           targeting binary file, ecc protected

endif

endmenu
