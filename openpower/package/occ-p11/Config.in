config BR2_PACKAGE_OCC_P11
        bool "OCC (POWER11)"
        default y if (BR2_OPENPOWER_PLATFORM && BR2_OPENPOWER_POWER11)
        select BR2_CPP
        help
            Project to build OCC for P11

if BR2_PACKAGE_OCC_P11

config BR2_OCC_P11_BIN_FILENAME
        string "Name of P11 OCC image file"
	default "occ.bin"
        help
            String used to define name of the P11 OCC binary image file

config BR2_OCC_P11_GPU_BIN_BUILD
        bool "Enables Compilation of P11 GPU Binary Image"
        default n
        select BR2_PACKAGE_HOSTBOOT_BINARIES
        help
            Boolean used to flag whether to compile P11 OCC GPU binary

config BR2_OCC_P11_GPU_GPE_BIN_FILENAME
        string "Name of P11 OCC GPU GPE Binary file"
        help
            String used to define name of the P11 OCC GPUE GPE binary image file

choice
	prompt "P11 OCC version"
	default BR2_OCC_P11_LATEST_VERSION

config BR2_OCC_P11_LATEST_VERSION
	bool "Use latest P11 OCC master"

config BR2_OCC_P11_CUSTOM_VERSION
	bool "Custom P11 OCC version"

endchoice

config BR2_OCC_P11_CUSTOM_VERSION_VALUE
	string "P11 OCC version"
	depends on BR2_OCC_P11_CUSTOM_VERSION

config BR2_OCC_P11_VERSION
	string
	default "de4399262a17b6423a9451df32304e6ff469b1c2" if BR2_OCC_P11_LATEST_VERSION
	default BR2_OCC_P11_CUSTOM_VERSION_VALUE \
		if BR2_OCC_P11_CUSTOM_VERSION

endif
