config BR2_PACKAGE_LIBFLASH
	bool "libflash"
	depends on BR2_PACKAGE_SKIBOOT
	help
	  Build libflash shared library

config BR2_PACKAGE_PFLASH
	bool "pflash"
	default y if BR2_PACKAGE_LIBFLASH
	help
